          },
          "response": []
        },
        {
          "name": "执行天气工具",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tool_id\": \"weather_tool\",\n  \"parameters\": {\n    \"city\": \"北京\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/execute",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "execute"]
            }
          },
          "response": []
        }
      ]
    },
